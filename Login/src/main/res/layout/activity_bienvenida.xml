<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradients"
    tools:context=".bienvenida">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/txtBienvenida"
            android:layout_width="158dp"
            android:layout_height="44dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="65dp"
            android:layout_marginTop="85dp"
            android:layout_marginEnd="145dp"
            android:layout_marginBottom="366dp"
            android:text="Bienvenid@"
            android:textSize="28dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/txt2Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="134dp"
            android:layout_marginEnd="107dp"
            android:background="#11000000"
            android:text="TextView"
            android:textColor="#07cfde"
            android:textSize="28dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="44dp"
            android:layout_marginTop="206dp"
            android:layout_marginEnd="266dp"
            android:layout_marginBottom="270dp"
            android:background="#11000000"
            android:text="Clase :" />

        <EditText
            android:id="@+id/edClase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt2Name"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="35dp"
            android:background="#11000000"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="230dp"
            android:text="Libro Favorito:" />

        <EditText
            android:id="@+id/edLibro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView5"
            android:layout_alignEnd="@+id/edClase"
            android:background="#11000000"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnSalir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-107dp"
            android:layout_marginTop="22dp"
            android:layout_toEndOf="@+id/txt2Name"
            android:background="@drawable/gradients"
            android:text="Salir" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="156dp"
            android:layout_height="187dp"
            android:layout_below="@+id/edLibro"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="114dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="98dp"
            android:layout_marginBottom="7dp"
            app:srcCompat="@drawable/templo" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>